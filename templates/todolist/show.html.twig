{% extends 'dashboard/index.html.twig' %}

{% block title %}Todolist{% endblock %}

{% block bodyx %}
    <div class="wrapper">
        <div class="sa4d25">
            <div class="container" style="margin-left: 5%">
                {% block cssx %}
                <link href="{{ asset('css/form2.css') }}" rel="stylesheet">
                {% endblock %}<!-- css endblock -->
                <div class="segment">
                    <h1>Todolist</h1>
                </div>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>ChangeId</th>
                        <td>{{ todolist.ChangeId }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ todolist.Title }}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ todolist.Date ? todolist.Date|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Owner</th>
                        <td>{{ todolist.Owner }}</td>
                    </tr>
                    <tr>
                        <th>NOK</th>
                        <td>{{ todolist.NOK ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>OK</th>
                        <td>{{ todolist.OK ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_todolist_index') }}">back to list</a>

                <a href="{{ path('app_todolist_edit', {'ChangeId': todolist.ChangeId}) }}">edit</a>

                {{ include('todolist/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
